/*
El siguiente código es diseñado para una tienda en linea que tiene un sistema de categorías de clientes y requiere automatizar los 
descuentos. Laas reglas de negocios son:
-Clientes VIP: reciben un 20% de descuento y si su compran 5 o más productos reciben un 10% adicional.
-Clientes Premium: reciben un 15% de descuento y si compran 3 o más productos reciben un 5% adicional.
-Clientes Regulares: reciben un 5% de descuento fijo.
El siguiente programa calculará y mostrará el precio final y el descuento aplicado.
*/
import java.util.Scanner;
public class Tienda
{
	public static void main(String[] args) {
	Scanner sc= new Scanner(System.in);
	    
	 System.out.println("Ingrese la cantidad de productos a comprar: ");
	 int cantidadProd = sc.nextInt();
	 System.out.println("Ingrese el precio total de los productos: ");
	 double precioReal = sc.nextDouble();
	 System.out.println("Ingrese la categoría del cliente: ");
	 String cliente = sc.next();
	 
	 double descuento = 0;
	 
	 //Descuento para clientes VIP
	 if (cliente.equalsIgnoreCase("vip")){
	    descuento = 0.8 * precioReal;       // El 20% descontado es = 80% del precio real
	    if( cantidadProd >= 5 ){
	        descuento *= 0.9;  // Segundo descuento del 10% adicional al precio rebajado
	    }
	 //Descuento para clientes Premium
	} else if(cliente.equalsIgnoreCase("premium")){
	    descuento = 0.85 * precioReal;       // El 15% descontado es = 85% del precio real
	    if( cantidadProd >= 3 ){
	        descuento *= 0.9;  //Descuento del 5% adicional aplicado al precio rebajado
	    }   
	 //Descuento fijo para clientes regulares   
	} else if(cliente.equalsIgnoreCase("regular")){
	    descuento = 0.95 * precioReal;     // El 5% descontado es = 95% del precio real
	}
	
	 System.out.printf("El precio final será de: %.2f$%n", descuento); 
	 System.out.printf("Se descontaron: %.2f$%n", precioReal - descuento);
	
	sc.close();
	    }   
	}
